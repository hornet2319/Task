<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/list_img"
        android:layout_width="@dimen/list_icon_width_land"
        android:layout_height="@dimen/list_icon_size_land"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/list_header"
        android:paddingTop="4dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/list_header_maxHeight_land"
        android:textSize="@dimen/list_header_textsize_land"
        android:layout_alignTop="@id/list_img"
        android:paddingLeft="8dp"
        android:layout_toRightOf="@+id/list_img"
        android:text=""/>
    <TextView
        android:id="@+id/list_publisher"
        android:paddingBottom="3dp"
        android:paddingLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_img"
        android:layout_alignLeft="@+id/list_header"
        android:textSize="@dimen/list_textsize_land"
        />
    <RatingBar
        android:id="@+id/list_rating"
        android:paddingBottom="3dp"
        android:layout_marginRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleIndicator"
        android:numStars="5"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:isIndicator="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>