<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_icon_size">
<ImageView
    android:id="@+id/list_img"
    android:layout_centerVertical="true"
    android:layout_width="@dimen/list_icon_width"
    android:layout_height="@dimen/list_icon_size"
    android:layout_alignParentLeft="true"/>
 <TextView
     android:id="@+id/list_header"
     android:layout_marginTop="8dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:maxHeight="@dimen/list_header_maxHeight"
     android:textSize="@dimen/list_header_textsize"
     android:paddingLeft="6dp"
     android:text="turn on the Internet, please"
     android:layout_alignParentTop="true"
     android:layout_toRightOf="@+id/list_img"
     android:layout_toEndOf="@+id/list_img" />
 <TextView
     android:id="@+id/list_publisher"
     android:paddingBottom="3dp"
     android:paddingLeft="6dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="@dimen/list_textsize"
     android:layout_alignParentBottom="true"
     android:layout_toRightOf="@+id/list_img"
     android:layout_toEndOf="@+id/list_img" />
  <RatingBar
      android:id="@+id/list_rating"
      android:paddingBottom="3dp"
      android:layout_marginRight="6dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="?android:attr/ratingBarStyleSmall"
      android:numStars="5"
      android:clickable="false"
      android:focusableInTouchMode="false"
      android:focusable="false"
      android:isIndicator="true"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true" />


</RelativeLayout>